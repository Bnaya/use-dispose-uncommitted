{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2015"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist/es5",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "rootDir": "./src"
  },
  "include": ["src"]
}
